@using BlocknotEF.Services.Models
@model List<RecordModel>

@{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone Number</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RecordModel item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Record" asp-route-id="@item.Id">edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}